<?xml version="1.0"?>

<ruleset name="Hints"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        These rules recommend changes to use the latest Java language features
    </description>

    <rule name="ConvertToTryWithResources"
          language="java"
          minimumLanguageVersion="1.7"
          message="Convert to try-with-resources"
          class="io.johnnyleitrim.pmd.lang.java.rule.hints.ConvertToTryWithResources">
        <description>
            You should use the try-with-resources language feature of Java 7
        </description>
        <priority>5</priority>
        <example>
<![CDATA[
EXAMPLE!
]]>
        </example>
    </rule>

    <rule name="ConvertToNumericsWithUnderscores"
          language="java"
          minimumLanguageVersion="1.7"
          message="Convert to numeric literal with underscores"
          class="io.johnnyleitrim.pmd.lang.java.rule.hints.ConvertToNumericsWithUnderscores">
        <description>
            You should use the numeric literals with underscores language feature of Java 7
        </description>
        <priority>5</priority>
        <example>
<![CDATA[
EXAMPLE!
]]>
        </example>
    </rule>

    <rule name="ConvertToDiamondOperator"
          language="java"
          minimumLanguageVersion="1.7"
          message="Convert to diamond operator"
          class="io.johnnyleitrim.pmd.lang.java.rule.hints.ConvertToDiamondOperator">
        <description>
            You should use the diamond operator language feature of Java 7
        </description>
        <priority>5</priority>
        <example>
<![CDATA[
EXAMPLE!
]]>
        </example>
    </rule>

</ruleset>